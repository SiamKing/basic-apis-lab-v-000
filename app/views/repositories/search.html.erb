<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<% if @error %>
  <%= @error %>
<% elsif @repos %>
  <ul>
    <% @repos.each do |repo| %>
      <li>Name: <%= repo['name'] %> --
      <%= link_to repo['htmo_url'], repo['html_url'] %> -- 
      Description: <%= repo['description'] %>
    </li>
    <% end %>
  </ul>
<% end %>

